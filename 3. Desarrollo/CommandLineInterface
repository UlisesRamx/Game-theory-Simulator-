

import time, os
OpcionMenuSeleccionada = 0
os.system('cls')

def crear_juego():
    print("Para crear un juego, por favor ingrese la cantidad de jugadores que participarán, el número de estrategias que tendrán los jugadores y el número de rondas que durará el juego." \
    " Estos valores deben ser números enteros positivos.")
    try:
        Rondas = int(input("Ingrese la cantidad de rondas (profundidad del árbol): "))
        Jugadores = int(input("Ingrese la cantidad de jugadores: "))
        Estrategias = int(input("Ingrese la cantidad de estrategias por jugador: "))
        if Rondas <= 0 or Jugadores <= 0 or Estrategias <= 0:
            raise ValueError
        elif Rondas > Jugadores:
            print("Se ha detectado que hay un número mayor de rondas.")
            time.sleep(2)
            return
    
    except ValueError:
        print("Por favor, ingrese números enteros positivos válidos.")
        time.sleep(2)
        return

while OpcionMenuSeleccionada != 2:
    os.system('cls')
    print("\n--- Menú Principal ---")
    print("1. Crear Juego")
    print("2. Salir")
    try:
        OpcionMenuSeleccionada = int(input("Seleccione una opción: "))
    except ValueError:
        print("Por favor, ingrese un número válido.")
        time.sleep(2)
        continue

    if OpcionMenuSeleccionada == 1:
        crear_juego()
        print("Árbol generado y visualizado.")
        time.sleep(3)
        print("Regresando al menú principal.")
        time.sleep(2)
    elif OpcionMenuSeleccionada == 2:
        print("Saliendo del programa.")
        time.sleep(2)
        break
    else:
        print("Opción no válida. Intente de nuevo.")
        time.sleep(2)

